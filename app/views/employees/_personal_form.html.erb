<h2>
  <%= @employee.full_name.blank? ? t(:New_employee) : @employee.full_name %>
  <small><%= t(:Personal_info) %></small>
</h2>


  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :birth_date %><br />
    <%= form.date_select( :birth_date, {prompt: true, start_year: 1900, end_year: Date.today.year}, class: 'form-control form-control-inline' ) %>
  </div>

  <div class="form-group">
    <%= form.label :gender %>
    <%= form.select :gender,
                    Person.genders.keys.collect{ |k| [t(k), k] },
                    {},
                    class: 'form-control' %>
  </div>
