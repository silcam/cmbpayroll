<% provide(:title, t(:Employees)) %>

<%= link_to t(:New_employee), new_employee_path, class: 'btn btn-primary btn-w-marge' %>

<table class="table">
  <tr>
    <th><%= t :Name %></th>
    <th><%= t :Title %></th>
    <th><%= t :Department %></th>
    <th>Actions</th>
  </tr>
  <% @employees.each do |employee| %>
    <tr>
      <td><%= link_to employee.full_name, employee_path(employee) %></td>
      <td><%= employee.title %></td>
      <td><%= employee.department_name %></td>
      <td><%= link_to t(:Add_charge), new_employee_charge_path(employee) %></td>
    </tr>
  <% end %>
</table>
