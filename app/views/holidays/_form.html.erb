<%= form_for holiday, html: {class: 'auto-width'} do |form| %>
    <div class="form-group-inline">
      <%= form.label :name, t(:Name) %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group-inline">
      <%= form.label :date, t(:Date), style: 'display: block;' %>
      <%= form.date_select :date, {discard_year: true}, class: 'form-control form-control-inline' %>
    </div>

    <div class="form-group-inline">
      <%= form.label :observed, t(:Observed), style: 'display: block;' %>
      <%= form.date_select :observed,
                           {discard_year: true, include_blank: true, start_year: @year},
                           class: 'form-control form-control-inline' %>
    </div>

    <div class="form-group-inline">
      <%= form.label :bridge, t(:Bridge), style: 'display: block;' %>
      <%= form.date_select :bridge, {discard_year: true, include_blank: true}, class: 'form-control form-control-inline' %>
    </div>

    <%= form.submit t(:Save), class: 'btn btn-primary' %>

    <% if defined? cancel and cancel %>
      <%= button_to t(:Cancel), holidays_path(year: @year), method: :get, class: 'btn btn-danger' %>
    <% end %>
<% end %>