<%= render 'shared/error_messages', errors: @misc_payment.errors %>

<div class="form-group">
  <%= form.label :amount, t(:Amount) %>
  <%= form.text_field :amount, placeholder: 'CFA', class: 'form-control', :data => { :commafy => true }, :aria => { :describedby => "amount-helper" } %>
  <small id="amount-helper" class="text-muted"></small>
</div>

<div class="form-group">
  <%= form.label :date, t(:Date), style: 'display: block;' %>
  <%= form.date_select :date, {}, class: 'form-control form-control-inline' %>
</div>

<div class="form-group">
  <%= form.label :before_tax, t(:Before_tax), style: 'display: block;' %>

  <div>
    <%= form.radio_button(:before_tax, "1") %>
    <%= form.label(:before_tax_1, "Yes") %>
  </div>

  <div>
    <%= form.radio_button(:before_tax, "0")  %>
    <%= form.label(:before_tax_0, "No") %>
  </div>
</div>

<div class="form-group">
  <%= form.label :note, t(:Note) %>
  <%= form.text_field :note, class: 'form-control' %>
</div>
