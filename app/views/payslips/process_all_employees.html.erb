
<%= link_to "<< #{t(:Back)}", payslips_url %>

<h2>Processed Payslips for <%= Period.current %></h2>


<h4>Payslips Processed:</h4>

<% if defined? @post_period_success %>
  <% if @post_period_success %>
    <p class="alert-success"><%= t :post_success_message %></p>
  <% else %>
    <p class="alert-danger"><%= t :post_failure_message %></p>
  <% end %>
<% end %>

<ul>
<% @payslips.each do |slip| %>

  <li>
    Processed Payslip ID #<%= slip.id %> for <%= slip.employee.full_name %> (errors? <%= !slip.errors.empty? %>)
    <% if (!slip.errors.empty?) %>
    <ul>
      <% slip.errors.each do |err| %>
        <li><%= err %></li>
      <% end %>
      <% slip.deductions.each do |err| %>
        <li><%= err.errors.inspect %></li>
      <% end %>
      <% slip.earnings.each do |err| %>
        <li><%= err.errors.inspect %></li>
      <% end %>
    </ul>
    <% end %>
  </li>

<% end %>
</ul>

