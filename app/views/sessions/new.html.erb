<%= render 'shared/error_messages', message: t(:Failed_login) if @failed_login %>
<%= form_tag login_path, class: 'auto-width' do  %>
  <div class="form-group">
    <%= label_tag :username, t(:Username) %>
    <%= text_field_tag :username, nil, class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group">
    <%= label_tag :password, t(:Password) %>
    <%= password_field_tag :password, nil, class: 'form-control' %>
  </div>
  <%= submit_tag t(:Login), class: 'btn btn-primary' %>
<% end %>