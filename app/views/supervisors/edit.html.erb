<%= provide :title, t(:Supervisors) %>

<%= link_to "<<#{t(:Supervisors)}", supervisors_path %>

<h2><%= @supervisor.full_name %></h2>

<%= render 'shared/error_messages', errors: @supervisor.errors %>

<%= form_for @supervisor, html: {class: 'auto-width'} do |form| %>
  <div class="form-group">
    <%= form.label :first_name, t(:First_name) %>
    <%= form.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, t(:Last_name) %>
    <%= form.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit t(:Save), class: 'btn btn-primary' %>
  </div>
<% end %>