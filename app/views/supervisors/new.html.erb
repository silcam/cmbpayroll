<h2><%= t :Add_new_supervisor %></h2>

<%= render 'shared/error_messages', errors: @supervisor.errors %>

<%= form_for @supervisor, html: {class: 'auto-width'} do |form| %>
  <div class="form-group">
    <%= form.label :person, t(:Person) %>
    <%= form.select :person_id,
                    options_for_select(Person
                                           .non_supervisors
                                           .collect{ |p| [p.full_name_rev, p.id]} +
                                        [t(:Create_new_person)]),
                    class: 'form-control' %>
  </div>

  <div class="form-group" id="name-fields" style="display: none;">
    <div class="form-group-inline">
      <%= form.label :first_name, t(:First_name) %>
      <%= form.text_field :first_name, class: 'form-control' %>
    </div>
    <div class="form-group-inline">
      <%= form.label :last_name, t(:Last_name) %>
      <%= form.text_field :last_name, class: 'form-control' %>
    </div>
  </div>

  <div>
    <%= form.submit t(:Save), class: 'btn btn-primary' %>
  </div>
<% end %>