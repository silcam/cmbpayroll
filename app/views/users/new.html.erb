<h2><%= t :New_user_account %></h2>

<%= render 'shared/error_messages', errors: @user.errors %>

<%= form_for @user, html: {class: 'auto-width'} do |form| %>

    <div class="radio">
      <label>
        <%= radio_button_tag :new_person, false %>
        <%= t :Use_exising_person %>
      </label>
    </div>

    <div class="form-group">
      <%= form.collection_select :person_id, Person.non_users, :id, :full_name_rev %>
    </div>

    <div class="radio">
      <label>
        <%= radio_button_tag :new_person, true %>
        <%= t :Create_new_person %>
      </label>
    </div>

    <div class="form-group">
      <label>
        <%= t :First_name %>
      </label>
      <%= form.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label>
        <%= t :Last_name %>
      </label>
      <%= form.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="form-group">
    <label>
      <%= t :Username %>
    </label>
    <%= form.text_field :username, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>
      <%= t :Password %>
    </label>
    <%= form.password_field :password, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <label>
      <%= t :Confirm_password %>
    </label>
    <%= form.password_field :password_confirmation, class: 'form-control'  %>
  </div>

  <%= form.submit t(:Save), class: 'btn btn-primary' %>
<% end %>