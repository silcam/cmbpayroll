<%= link_to t(:Enter_vacation), new_vacation_path, class: 'btn btn-primary' %>

<% unless @period_vacations.empty? %>
  <h3><%= t(:Vacation_for) %> <%= Period.current.month_name %></h3>
  <%= render 'vacation_table', vacations: @period_vacations %>
<% end %>

<% unless @upcoming_vacations.empty? %>
  <h3><%= t(:Other_upcoming_vacation) %></h3>
  <%= render 'vacation_table', vacations: @upcoming_vacations %>
<% end %>