<%= link_to "<< #{@employee.full_name}", employee_path(@employee) %>

<h2><%= t :Vacation_for %> <%= @employee.full_name %></h2>

<% if can? :create, Vacation %>
  <%= link_to t(:Enter_vacation), new_employee_vacation_path(@employee, referred_by: request.path), class: 'btn btn-primary', style: 'margin-bottom: 10px;', id: 'enter-vacation-btn' %>
<% end %>

<%= render 'days_summary', employee: @employee %>

<%= render 'vacation_table', vacations: @vacations.reverse_order %>
