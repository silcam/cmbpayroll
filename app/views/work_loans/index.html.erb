<% provide :title,  t(:Work_loans) %>

<h2>Work Loans for: <%= @period.name %></h2>

<%= render 'shared/period_nav', period: @period, path: work_loans_path, future: true %>

<% if @has_hours %>
<h3>Totals for the Period:</h3>

Total Loaned Hours: <strong><%= @total_hours %></strong><br />
Total Loaned Hours per Department:<br />
  <ul>
  <% @dept_hash.each do |dept,hours| %>
      <li><strong><%= dept.name %></strong>: <%= hours %></li>
  <% end %>
  </ul>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Hours</th>
      <th>Dept</th>
      <th>Date</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @work_loans.each do |loan| %>
      <tr>
        <td><%= loan.employee.full_name %></td>
        <td><%= loan.hours %></td>
        <td><%= loan.department.name %></td>
        <td><%= loan.date %></td>
        <td><%= link_to t(:Destroy), loan, method: :delete, data: { confirm: t(:Are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>




<br>

<%= link_to t(:New_work_loan), new_work_loan_path() %>
